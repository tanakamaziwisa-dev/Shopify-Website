<section class="value-props page-width" {{ section.shopify_attributes }}>
  <div class="section-heading-wrap">
    <h2>{{ section.settings.heading | escape }}</h2>
  </div>
  <div class="value-props__grid">
    {% for block in section.blocks %}
      <article class="value-prop" {{ block.shopify_attributes }}>
        <div class="value-prop__icon" aria-hidden="true">
          {% if block.settings.icon_svg != blank %}
            {{ block.settings.icon_svg }}
          {% else %}
            {{ block.settings.icon_emoji | escape }}
          {% endif %}
        </div>
        <h3>{{ block.settings.title | escape }}</h3>
        <p>{{ block.settings.text | escape }}</p>
      </article>
    {% endfor %}
  </div>
</section>

